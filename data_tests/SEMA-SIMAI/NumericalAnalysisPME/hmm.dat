#!/bin/bash
#
# The value of mPME and the choice of meshes have to be adjusted to correspond to the various cases in the chapter

# Use threads
use_threads="true"

# Boundary conditions (D, N, Mx)
bc="D"  # N may not work...

# Test case
tcsol=4
tcdiff=1

# Type of nonlinearity
tcNL=2
mPME=3

# Weight of mass-lumping on edges
weight=0

# Source: exact (1) or zero (0)
source=0

# Final time and initial time step
FinalTps=1
dt_initial=0.1

# Solver
solver_type="bicgstab"
#solver_type="ma41"

# Meshes (without .typ2)

# Triangular
mesh[1]="mesh1_3"
mesh[2]="mesh1_4"
mesh[3]="mesh1_5"
mesh[4]="mesh1_6"
mesh[5]="mesh1_7"

